<?xml version="1.0" encoding="utf-8"?>
   <RelativeLayout
            android:id="@+id/relativeLayout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/imgView_setImg"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:contentDescription="@null"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/textView_imgName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgView_setImg"
                android:layout_toRightOf="@+id/imgView_setImg"
                android:layout_toStartOf="@+id/imgView_setDots"
                android:layout_toLeftOf="@+id/imgView_setDots"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textView_imgSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgView_setImg"
                android:layout_toRightOf="@+id/imgView_setImg"
                android:layout_toStartOf="@+id/imgView_setDots"
                android:layout_toLeftOf="@+id/imgView_setDots"
                android:layout_below="@+id/textView_imgName"
                android:layout_alignStart="@+id/textView_imgName"
                android:layout_alignLeft="@+id/textView_imgName"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/imgView_setDots"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"
                android:layout_centerVertical="true"
                android:src="@drawable/moregrey_ic"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

    <View
        android:id="@+id/setView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/textView_imgSize"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"/>


     </RelativeLayout>



